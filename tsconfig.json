{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

     // Netlify recomendation https://www.typescriptlang.org/tsconfig#esModuleInterop
    "esModuleInterop": true,

    // SVG imports
    "allowSyntheticDefaultImports": true,


    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    // Netlify recomendation https://www.typescriptlang.org/tsconfig#verbatimModuleSyntax
    "verbatimModuleSyntax": true,

    
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "functions/proxy", "functions"],
  "references": [{ "path": "./tsconfig.node.json" }]
}